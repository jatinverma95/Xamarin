<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Exercises.GridExercise2">
    <Grid BackgroundColor="#127ac7" Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" VerticalOptions="Center">
            <Label FontSize = "30" FontAttributes = "Bold" HorizontalOptions = "Center" VerticalOptions="Center" Text="Welcome to Xamarin!" TextColor="White" ></Label>
            <Label HorizontalOptions="Center" VerticalOptions="Center" FontSize="18" Text="Cross-platform Apps made easy" TextColor="White" ></Label>
        </StackLayout>
        <Button Grid.Row="1" Text="Login" BackgroundColor="#1dabf0" TextColor="White"></Button>
        <Button Grid.Row="2" Text="Register" BackgroundColor="#1dabf0" TextColor="White"></Button>
        
    </Grid>

</ContentPage>